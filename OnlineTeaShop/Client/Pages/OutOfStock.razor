

@page "/outofstock"


<h3 class="p-3 text-center">Out of Stock</h3>
<div class="row">
    @foreach (var product in ProductsList)
    {
        @if (product.UnitInStock == 0)
        {
            <div class="col-md-4">
                <div class="card mb-5 pb-5">
                    <div class="card-body text-center">

                        <img src="@product.Image" width="150" height="150" />

                        <h5 class="card-title pt-5">@product.ProductName</h5>
                        <p class="card-text">
                            @product.UnitPrice BGN
                        </p>

                        @if (product.UnitInStock == 0)
                        {
                            <label class="badge badge-danger">
                                Out of Stock
                            </label>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>


